{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "lib": ["es2015"],
  "include": ["src"]
}
